<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title - Reunion</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/jquery-1.9.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    <link rel="stylesheet" href="~/Content/Site.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
</head>

<body>

    <nav class="navbar navbar-expand-sm fixed-top navbar-dark" style="background-color: white">
        <div class="container-fluid">
            <a class="navbar-brand" href="@Url.Action("Index","Home")">
                <img src="~/Content/Image/Reunion Logo.png" alt="" width="45" height="45">
                Reunion
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarScroll" aria-controls="navbarScroll" aria-expanded="false" aria-label="Toggle navigation">
                <span></span>
                <span></span>
                <span></span>
            </button>
            <div class="collapse navbar-collapse justify-content-between" id="navbarScroll">
                <ul class="navbar-nav ms-auto mb-2 mb-md-0 navbar-nav-scroll" style="--bs-scroll-height: 100px;">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="@Url.Action("Index","Home")">
                            Home
                        </a>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarScrollingDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Missing People
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarScrollingDropdown">
                            <li><a class="dropdown-item" href="@Url.Action("Listmiss","Lostperson")">Missing people List</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("AddMiss","Lostperson")">Reporting Form</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="@Url.Action("SearchInDetailes","Lostperson")">Search In Details</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("Index","Similarity")">Search By Image </a></li>
                        </ul>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarScrollingDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Found People
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarScrollingDropdown">
                            <li><a class="dropdown-item" href="@Url.Action("Listfound","Findpeople")">Found people List</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("Addfoind","Findpeople")">Reporting Form</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="@Url.Action("SearchInDetailes","Findpeople")">Search In Details</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("Index","Similarity")">Search By Image </a></li>
                        </ul>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarScrollingDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Crimes
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarScrollingDropdown">
                            <li><a class="dropdown-item" href="@Url.Action("Listkidnap","Criminal")">Lastest News</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("Addkidnap","Criminal")">Reporting</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="@Url.Action("Listvedio","Criminal")">Crimes Reported </a></li>

                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarScrollingDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Servies
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarScrollingDropdown">
                            <li><a class="dropdown-item" href="@Url.Action("Index","ContactUs")"> Contact Us</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("Index","HelpUs")">Help Us With be A Volunteer</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("Index","Awareness")">Awareness</a></li>

                        </ul>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index","Returned")" id="navbarScrollingDropdown" role="button">
                            Returned
                        </a>
                    </li>
                  
                </ul>
            </div>



            @{if (Session["role_sec"].ToString() == "user_normal")
                {
                    <div class="collapse navbar-collapse justify-content-end" id="navbarScroll">
                        <ul class="navbar-nav mb-auto mb-2 mb-lg-0 navbar-nav-scroll" style="--bs-scroll-height: 100px;">
                            <li>
                                <a href="@Url.Action("Login","Account")" class="btn btn-md btn-default">login</a>
                            </li>
                            <li>
                                <div class="btn-nav">
                                    <a href="@Url.Action("Register","Account")" class="btn btn-md btn-default">Sign up!</a>
                                </div>
                            </li>
                        </ul>
                    </div>
                }
                else if (Session["role_sec"].ToString() == "user")
                {

                    <!-- The sidebar -->
                    <div class="icon-bar">
                        <a href="/User/UserProfile" class="User"><i class="fa bi-person-fill"></i></a>
                        <a href="/chat/index" class="Chat"><i class="fa bi-chat-fill"></i></a>
                        <a href="/Findpeople/SearchInDetailes" class="Search"><i class="fa bi-search"></i></a>
                    </div>

                    <div class="collapse navbar-collapse justify-content-end" id="navbarScroll">
                        <ul class="navbar-nav mb-auto mb-2 mb-lg-0 navbar-nav-scroll" style="--bs-scroll-height: 100px;">
                            <li class="btn btn-md btn-default">@Html.ActionLink("Logout", "Logout", "Account")</li>
                        </ul>

                    </div>





                }
                else
                {
                    <div class="collapse navbar-collapse justify-content-end" id="navbarScroll">
                        <ul class="navbar-nav mb-auto mb-2 mb-lg-0 navbar-nav-scroll" style="--bs-scroll-height: 100px;">
                            <li>@Html.ActionLink("Logout", "Logout", "Account")</li>
                        </ul>
                       
                    </div>
                }
            }



        </div>
    </nav>


    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- Vendor JS Files -->
    <script src="Scripts/bootstrap.bundle.js"></script>
    <script src="Scripts/aos.js"></script>
    <script src="Scripts/validate.js"></script>
    <script src="Scripts/swiper-bundle.min.js"></script>
    <script src="Scripts/purecounter.js"></script>
    <script src="Scripts/isotope.pkgd.min.js"></script>
    <script src="Scripts/glightbox.min.js"></script>

    <!-- Template Main JS File -->
    <script src="Scripts/main.js"></script>


    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer id="footer" class="footer">
            <div class="footer-top">
                <div class="container">
                    <div class="row gy-4">
                        <div class="col-lg-5 col-md-12 footer-info">
                            <a href="index.html" class="logo d-flex align-items-center">
                                <img src="~/Content/Image/Reunion Logo.png" alt="">
                                <span>Reunion</span>
                            </a>
                            <p>team tries its best to reunite families around the world</p>
                            <div class="social-links mt-3">
                                <a href="#" class="facebook"><i class="fa fa-facebook"></i></a>
                                <a href="#" class="twitter"><i class="fa fa-twitter"></i></a>
                                <a href="#" class="instagram"><i class="fa fa-youtube"></i></a>
                                <a href="#" class="instagram"><i class="fa fa-instagram"></i></a>
                                <a href="#" class="linkedin"><i class="fa fa-linkedin"></i></a>
                                <a href="#" class="linkedin"><i class="fa fa-google"></i></a>
                            </div>
                        </div>

                        <div class="col-lg-2 col-6 footer-links">
                            <h4>Useful Links</h4>
                            <ul>
                                <li><i class="bi bi-chevron-right"></i> <a href="#">Home</a></li>
                                <li><i class="bi bi-chevron-right"></i> <a href="#">Missing Persons</a></li>
                                <li><i class="bi bi-chevron-right"></i> <a href="#">Founded Persons</a></li>
                                <li><i class="bi bi-chevron-right"></i> <a href="#">Be Volunteer</a></li>
                                <li><i class="bi bi-chevron-right"></i> <a href="#">Crimes</a></li>
                            </ul>
                        </div>

                        <div class="col-lg-2 col-6 footer-links">
                            <h4>Our Services</h4>
                            <ul>
                                <li><i class="bi bi-chevron-right"></i> <a href="#">Reporting for Missing Person</a></li>
                                <li><i class="bi bi-chevron-right"></i> <a href="#">Reporting for Founded Person </a></li>
                                <li><i class="bi bi-chevron-right"></i> <a href="#">Add Crime Video</a></li>
                                <li><i class="bi bi-chevron-right"></i> <a href="#">Reporting for Crime</a></li>
                                <li><i class="bi bi-chevron-right"></i> <a href="#">Be a Founder</a></li>
                            </ul>
                        </div>

                        <div class="col-lg-3 col-md-12 footer-contact text-center text-md-start">
                            <h4>Contact Us</h4>
                            <p>
                                A108 Adam Street <br>
                                New York, NY 535022<br>
                                United States <br><br>
                                <strong>Phone:</strong> +1 5589 55488 55<br>
                                <strong>Email:</strong> info@example.com<br>
                            </p>

                        </div>

                    </div>
                </div>
            </div>



            <div class="container">
                <div class="copyright">
                    &copy; Copyright <strong><span>Reunion</span></strong>. All Rights Reserved
                </div>
                <div class="credits">
                    <!-- All the links in the footer should remain intact. -->
                    <!-- You can delete the links only if you purchased the pro version. -->
                    <!-- Licensing information: https://bootstrapmade.com/license/ -->
                    <!-- Purchase the pro version with working PHP/AJAX contact form: https://bootstrapmade.com/flexstart-bootstrap-startup-template/ -->
                </div>
            </div>
        </footer>
    </div>
    @Scripts.Render("~/bundle/jquery")
    @Scripts.Render("~/bundle/bootstrap")
    @RenderSection("scripts", required: false)



</body>

</html>
