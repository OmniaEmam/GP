<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>@ViewBag.Title - Reunion</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/jquery-1.9.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    <link rel="stylesheet" href="~/Content/Site.css" />

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color:#081C15; border-bottom-color:#081C15">
        <div class="container">

            <div class="navbar-header" style="color:white">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                </button>
                @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>

            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#" style="color:#F1FAEE;">
                            Missing People
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu" style="color:#F1FAEE; ">
                            <li>@Html.ActionLink("Missing people List", "Listmiss", "Lostperson")</li>
                            <li>@Html.ActionLink("Missing people Form", "AddMiss", "Lostperson")</li>
                        </ul>
                    </li>

                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#" style="color:#F1FAEE;">
                            Found People
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu" style="color:#F1FAEE; ">
                            <li>@Html.ActionLink("Found people List", "Listfound", "Findpeople")</li>
                            <li>@Html.ActionLink("Found people Form", "Addfoind", "Findpeople")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#" style="color:#F1FAEE;">
                            Crimes
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu" style="color:#F1FAEE">
                            <li>@Html.ActionLink("Lastest News", "Listkidnap", "Criminal")</li>
                            <li>@Html.ActionLink("Reporting", "Addkidnap", "Criminal")</li>
                        </ul>
                    </li>

                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#" style="color:#F1FAEE;">
                            Search Options
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu" style="color:#F1FAEE">
                            <li><a href="#">By Image</a></li>
                            <li>@Html.ActionLink("By Details", "SearchInDetailes", "Lostperson")</li>
                        </ul>
                    </li>
                </ul>


                <ul class="nav navbar-nav navbar-right">
                    <li>
                        @Html.ActionLink("Logout", "Logout", "Account")
                    </li>
                </ul>

                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a href="@Url.Action("Search","Findpeople")"><i class="glyphicon glyphicon-search" title="Search"></i></a>
                    </li>
                </ul>
            </div>

        </div>

    </div>

    <!-- The sidebar -->
    <div class="sidebar">
        <a href="#"><i class="glyphicon glyphicon-bell" title="Notification "></i></a>
        <a href="#"><i class="glyphicon glyphicon-globe" title="News"></i></a>
        <a href="#"><i class="glyphicon glyphicon-envelope" title="Messages"></i></a>
        <a href="@Url.Action("Search","Findpeople")"><i class="glyphicon glyphicon-search" title="Search"></i></a>
        <a href="@Url.Action("UserProfile", "User")"><i class="glyphicon glyphicon-user" title="Profile"></i></a>

    </div>




    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer style="color:white">
            <p>&copy; @DateTime.Now.Year - Reunion</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
