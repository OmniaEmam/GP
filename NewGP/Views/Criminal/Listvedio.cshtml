@model IEnumerable<NewGP.Models.Crimesvidio>

@{
    ViewBag.Title = "Listvedio";
}
<head>

    <script src="~/Scripts/jquery-1.9.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    <link rel="stylesheet" href="~/Content/Site.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
</head>
<br />
<br />
<h3 style="color: black; font-family: 'Poppins'; font-size: 60px; text-align-last: center;">Crimes Reported</h3>

    <p>
        <button class="btn btn-warning">@Html.ActionLink("Create New", "addcrimeVedio")</button> 
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Vname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vfile)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.user.Username)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Vname)
                </td>
                <td>
                    <div class="vedio-frame">
                        <video style="width:250px; height:150px" controls>
                            <source src="@Url.Content(item.Vfile)" type="video/mp4" />
                        </video>
                    </div>
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.user.Username)
                </td>
              <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                    @Html.ActionLink("Details", "Detailsvedio", new { id = item.id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.id })

                </td>
            </tr>
        }

    </table>
    <button class="btn btn-default">@Html.ActionLink("Back to List", "Listkidnap")</button>
