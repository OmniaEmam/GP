@model IEnumerable<NewGP.Models.findpeople>

@{
    ViewBag.Title = "SearchInDetailes";
}
<br />
<br />
<h2 style="color: black; font-family: 'Poppins'; font-size: 60px; text-align-last: center;">Search In Detailes</h2>
<br />
<br />
@using (Html.BeginForm("SearchInDetailes", "Findpeople", FormMethod.Get))
{<div class="row">
        <div class="col-2">
            <b style="color:black">First Name</b>
            <br />
            @Html.TextBox("searchbyFN")
            <br />
        </div>

        <div class="col-2">
            <b style="color:black">Last Name</b>
            <br />
            @Html.TextBox("searchbyLN")
            <br />
        </div>
        <div class="col-2">
            <b style="color:black">City</b>
            <br />
            @Html.TextBox("searchbycity")
            <br />
        </div>
        <div class="col-2">
            <b style="color:black">Country</b>
            <br />
            @Html.TextBox("searchbycountry")
            <br />
        </div>
        <div class="col-2">
            <b style="color:black">Place Found</b>
            <br />
            @Html.TextBox("searchbyplacefound")
            <br />
        </div>
        <br />
        <br />
        <br />

        <input class="btn btn-warning" style="width:150px; height:50px; margin:auto" type="submit" value="search" />
        <br />
    </div>
}
<br />
<br />
<br />
