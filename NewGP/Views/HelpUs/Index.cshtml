
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- ======= Help Section ======= -->
<section id="contact" class="contact">

    <div class="container" data-aos="fade-up">

        <header class="section-header">
            <h2>Help Us</h2>
            <p>Be a Volanteer</p>
        </header>

        <form action="forms/contact.php" method="post" class="php-email-form">
            <div class="row gy-4">

                <div class="col-md-12" style="padding-left:200px">
                    <input type="text" name="name" class="form-control" placeholder="Your Name" required>
                </div>

                <div class="col-md-12 " style="padding-left:200px">
                    <input type="email" class="form-control" name="email" placeholder="Phone Number" required>
                </div>

                <div class="col-md-12" style="padding-left:200px">
                    <input type="text" class="form-control" name="subject" placeholder="Your Jop" required>
                </div>

                <div class="col-md-12" style="padding-left:200px">
                    <textarea class="form-control" name="message" rows="6" placeholder="Why you want to help Us ?" required></textarea>
                </div>

                <div class="col-md-12 text-center">
                    <div class="loading">Loading</div>
                    <div class="error-message"></div>
                    <div class="sent-message">Your message has been sent. Thank you!</div>

                    <button type="submit" class="btn btn-default btn-lg btn-success">
                        @Html.ActionLink(" Send Mail", "Index", "Thanks")
                    </button>
                </div>

            </div>
        </form>

    </div>



</section><!-- End Help Section -->
